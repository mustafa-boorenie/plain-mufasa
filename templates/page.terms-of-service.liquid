<style>
  .legal-page { background: #090909; color: #f5f5f3; min-height: 100vh; }
  .legal-page *, .legal-page *::before, .legal-page *::after { box-sizing: border-box; }

  .legal-hero {
    padding: 12rem 5vw 4rem;
    max-width: 900px;
    margin: 0 auto;
  }
  .legal-hero__heading {
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    font-size: clamp(2.5rem, 6vw, 5rem);
    text-transform: uppercase;
    letter-spacing: -0.03em;
    line-height: 1;
    margin: 0;
  }
  .legal-hero__heading .accent { color: #8B3A2F; }
  .legal-hero__updated {
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    font-size: 0.85rem;
    color: rgba(245,245,243,0.4);
    margin-top: 1.5rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .legal-content {
    max-width: 760px;
    margin: 0 auto;
    padding: 2rem 5vw 8rem;
  }
  .legal-content h2 {
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    font-size: 1.35rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #f5f5f3;
    margin: 3.5rem 0 1.2rem;
    padding-bottom: 0.6rem;
    border-bottom: 1px solid rgba(139,58,47,0.3);
  }
  .legal-content h2:first-child { margin-top: 0; }
  .legal-content p, .legal-content li {
    font-family: 'Inter', sans-serif;
    font-weight: 300;
    font-size: 1rem;
    line-height: 1.85;
    color: rgba(245,245,243,0.7);
    margin-bottom: 1.2rem;
  }
  .legal-content ul, .legal-content ol {
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }
  .legal-content li { margin-bottom: 0.5rem; }
  .legal-content strong {
    font-weight: 500;
    color: #f5f5f3;
  }
  .legal-content a {
    color: #8B3A2F;
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  .legal-content a:hover { color: #f5f5f3; }
  .legal-divider {
    width: 40px;
    height: 1px;
    background: #8B3A2F;
    margin: 3rem 0;
  }

  @media (max-width: 768px) {
    .legal-hero { padding: 10rem 6vw 3rem; }
    .legal-content { padding: 2rem 6vw 6rem; }
  }
</style>

<div class="legal-page">

  <!-- ═══════════ HEADER ═══════════ -->
  <header class="prntd-header" id="prntd-header">
    <div class="prntd-header-inner">
      <a href="{{ routes.root_url }}" class="prntd-header-logo">
        {% if settings.collection_screen_logo %}
          <img src="{{ settings.collection_screen_logo | image_url: width: 200 }}" alt="PRNTD" class="prntd-logo-img">
        {% elsif settings.shop_screen_logo %}
          <img src="{{ settings.shop_screen_logo | image_url: width: 200 }}" alt="PRNTD" class="prntd-logo-img">
        {% else %}
          P.
