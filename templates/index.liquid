    <img class="hero-layer-1" src="{{ settings.hero_layer_1 | image_url: width: 2000 }}" alt="PRNTD" loading="eager" fetchpriority="high">
  {% else %}
    <img class="hero-layer-1" src="{{ 'prntd-hero-layer-1.png' | asset_url }}" alt="PRNTD" loading="eager" fetchpriority="high">
  {% endif %}

  {% if settings.hero_layer_2 %}
    <img class="hero-layer-2" src="{{ settings.hero_layer_2 | image_url: width: 2000 }}" alt="" loading="eager" aria-hidden="true">
  {% else %}
    <img class="hero-layer-2" src="{{ 'prntd-hero-layer-2.png' | asset_url }}" alt="" loading="eager" aria-hidden="true">
  {% endif %}

  <div class="hero-ui hero-logo" data-hero-ui>
    <a href="{{ routes.root_url }}">
      {% if settings.enter_screen_logo %}
        <img src="{{ settings.enter_screen_logo | image_url: width: 300 }}" alt="PRNTD" class="hero-logo-img">
      {% else %}
        P.
      {% endif %}
    </a>
  </div>

  <div class="hero-ui hero-nav" data-hero-ui>
    <a href="/collections/all">Shop</a>
  </div>

  <div class="hero-ui hero-social" data-hero-ui>
