  <div class="hero-ui hero-scroll-hint" data-hero-ui>
    <span>Scroll to explore</span>
  </div>
</section>

{% comment %} ============================================================
   SECTION 2: SEASON TWO — EDITORIAL SHOWCASE
   ============================================================ {% endcomment %}

<section class="editorial-section">
  <div class="editorial-header" data-animate="fade-up">
    <p>Season Two</p>
    <h2>Roots Reimagined</h2>
  </div>

  <div class="editorial-grid">
    {% for product in collections['all'].products limit: 6 %}
      <div class="editorial-item" data-animate="fade-up" data-animate-delay="{{ forloop.index | times: 100 }}">
        <div class="editorial-item-image">
          {% if product.featured_image %}
            <a href="{{ product.url }}">
              <img 
                src="{{ product.featured_image | image_url: width: 800 }}" 
                alt="{{ product.title | escape }}"
                loading="lazy"
                width="800"
                height="1067"
              >
            </a>
          {% endif %}
        </div>
        <div class="editorial-item-content">
          <span class="item-collection">{{ product.type | default: 'PRNTD' }}</span>
          <h3>{{ product.title }}</h3>
          <p class="item-description">{{ product.description | strip_html | truncate: 150 }}</p>
          <div class="item-price">{{ product.price | money }}</div>
          <a href="{{ product.url }}" class="prntd-btn">View Piece</a>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% comment %} ============================================================
   SECTION 3: STORYTELLING DIVIDER
   ============================================================ {% endcomment %}

<section class="story-divider" data-animate="fade-in">
  <blockquote>
    Every thread carries a memory.<br>
    Every pattern tells a story<br>
    that was never meant to be forgotten.
  </blockquote>
  <div class="story-attribution">— PRNTD</div>
</section>

{% comment %} ============================================================
   SECTION 4: CALL TO ACTION
   ============================================================ {% endcomment %}

<section class="editorial-section" style="padding: 6rem 2rem; text-align: center;">
  <div data-animate="fade-up">
    <p class="prntd-ui-text" style="color: #888; margin-bottom: 1rem;">The Collection</p>
    <h2 class="prntd-brand-text" style="font-size: clamp(1.8rem, 4vw, 3rem); font-style: italic; margin-bottom: 2rem; color: #0a0a0a;">
      Explore the Archive
    </h2>
    <a href="/collections/all" class="prntd-btn">Shop All</a>
  </div>
</section>

{% comment %} ============================================================
   SCRIPTS
   ============================================================ {% endcomment %}

{% comment %} ============================================================
   FOOTER
   ============================================================ {% endcomment %}

<footer class="prntd-footer prntd-footer--dark">
  <span>© {{ 'now' | date: '%Y' }} PRNTD</span>
  <div class="prntd-footer-links">
    <a href="https://instagram.com/prntdbybdq" target="_blank" rel="noopener">Instagram</a>
    <a href="https://x.com/prntdbybdq" target="_blank" rel="noopener">X</a>
  </div>
</footer>

<script src="{{ 'hero-interaction.js' | asset_url }}" defer></script>
<script src="{{ 'scroll-animations.js' | asset_url }}" defer></script>
