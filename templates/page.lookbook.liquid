<!-- PRNTD Lookbook — Brutalist Editorial -->
<svg style="position:absolute;width:0;height:0">
  <filter id="grain">
    <feTurbulence type="fractalNoise" baseFrequency="0.65" numOctaves="3" stitchTiles="stitch"/>
    <feColorMatrix type="saturate" values="0"/>
    <feBlend in="SourceGraphic" mode="multiply"/>
  </filter>
</svg>

<style>
  /* ——— LOOKBOOK RESET ——— */
  .lb { --black: #000; --white: #fff; --gray: #999; --border: 2.5px solid #000; font-family: 'Inter', sans-serif; background: var(--white); color: var(--black); }
  .lb *, .lb *::before, .lb *::after { box-sizing: border-box; border-radius: 0 !important; }

  /* ——— HERO ——— */
  .lb-hero { padding: 120px 24px 60px; text-align: center; border-bottom: var(--border); }
  .lb-hero h1 { font-family: 'Inter', sans-serif; font-weight: 600; font-size: clamp(60px, 15vw, 200px); line-height: 0.9; letter-spacing: -0.04em; margin: 0; text-transform: uppercase; }
  .lb-hero .lb-sub { font-family: 'DM Sans', sans-serif;  font-size: clamp(14px, 2vw, 22px); letter-spacing: 0.12em; margin-top: 16px; color: var(--gray); }
  .lb-hero .lb-col-label { font-size: 11px; letter-spacing: 0.3em; text-transform: uppercase; margin-top: 32px; color: var(--gray); }

  /* ——— GRID ——— */
  .lb-grid { display: grid; grid-template-columns: repeat(4, 1fr); padding: 0; margin: 0; }
  .lb-cell { position: relative; border: var(--border); margin: -1.25px; overflow: hidden; min-height: 350px; }
  .lb-cell.span-2c { grid-column: span 2; }
  .lb-cell.span-2r { grid-row: span 2; }
  .lb-cell.span-2c.span-2r { min-height: 700px; }

  .lb-cell img { width: 100%; height: 100%; object-fit: cover; display: block; transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94); }
  .lb-cell:hover img { transform: scale(1.03); }

  /* grain overlay */
  .lb-cell::after { content: ''; position: absolute; inset: 0; filter: url(#grain); opacity: 0.08; pointer-events: none; z-index: 2; mix-blend-mode: multiply; }

  /* counter */
  .lb-counter { position: absolute; top: 12px; left: 14px; font-family: 'Inter', sans-serif; font-weight: 600; font-size: 13px; letter-spacing: 0.05em; color: var(--white); z-index: 3; text-shadow: 0 1px 4px rgba(0,0,0,0.6); }

  /* vertical label */
  .lb-vlabel { position: absolute; bottom: 14px; right: 0; writing-mode: vertical-rl; text-orientation: mixed; font-family: 'Inter', sans-serif; font-weight: 500; font-size: 9px; letter-spacing: 0.25em; text-transform: uppercase; color: rgba(255,255,255,0.75); z-index: 3; padding: 8px 10px; text-shadow: 0 1px 3px rgba(0,0,0,0.5); }

  /* product name overlay */
  .lb-pname { position: absolute; bottom: 14px; left: 14px; font-family: 'DM Sans', sans-serif;  font-size: 14px; color: var(--white); z-index: 3; text-shadow: 0 1px 4px rgba(0,0,0,0.6); letter-spacing: 0.04em; }

  /* ——— TEASER ——— */
  .lb-teaser { position: relative; overflow: hidden; border-top: var(--border); min-height: 80vh; display: flex; align-items: center; justify-content: center; }
  .lb-teaser__bg { position: absolute; inset: 0; z-index: 0; }
  .lb-teaser__bg img { width: 100%; height: 100%; object-fit: cover; filter: brightness(0.6) contrast(1.2); }
  .lb-teaser__overlay { position: absolute; inset: 0; background: linear-gradient(180deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.7) 60%, rgba(0,0,0,0.95) 100%); z-index: 1; }
  .lb-teaser__content { position: relative; z-index: 2; text-align: center; padding: 60px 24px; color: var(--white); }
  .lb-teaser h2 { font-family: 'DM Sans', sans-serif; font-weight: 700; font-size: clamp(48px, 14vw, 180px); line-height: 0.85; letter-spacing: -0.04em; margin: 0; text-transform: uppercase; text-shadow: 0 4px 40px rgba(0,0,0,0.5); }
  .lb-teaser .lb-teaser-sub { font-family: 'DM Sans', sans-serif; font-weight: 500; font-size: clamp(16px, 2.5vw, 28px); margin-top: 24px; color: rgba(245,245,243,0.7); letter-spacing: 0.15em; }
  .lb-teaser .lb-teaser-tag { font-size: 11px; letter-spacing: 0.35em; text-transform: uppercase; margin-bottom: 20px; color: rgba(245,245,243,0.5); }
  .lb-teaser .lb-teaser-cta { display: inline-block; margin-top: 40px; padding: 16px 48px; border: 1px solid rgba(245,245,243,0.3); color: var(--white); font-family: 'Inter', sans-serif; font-size: 12px; font-weight: 500; letter-spacing: 0.2em; text-transform: uppercase; text-decoration: none; transition: all 0.3s ease; }
  .lb-teaser .lb-teaser-cta:hover { background: var(--white); color: var(--black); border-color: var(--white); }

  /* ——— MOBILE ——— */
  @media (max-width: 768px) {
    .lb-grid { grid-template-columns: 1fr; }
    .lb-cell.span-2c { grid-column: span 1; }
    .lb-cell.span-2r { grid-row: span 1; }
    .lb-cell { min-height: 300px; }
    .lb-cell.span-2c.span-2r { min-height: 400px; }
    .lb-hero { padding: 100px 16px 40px; }
    .lb-teaser { min-height: 60vh; }
  }
  @media (min-width: 769px) and (max-width: 1024px) {
    .lb-grid { grid-template-columns: repeat(2, 1fr); }
  }
</style>

<div class="lb">
  <header class="prntd-header" id="prntd-header">
    <div class="prntd-header-inner">
      <a href="{{ routes.root_url }}" class="prntd-header-logo">
        {% if settings.collection_screen_logo %}
          <img src="{{ settings.collection_screen_logo | image_url: width: 200 }}" alt="PRNTD" class="prntd-logo-img">
        {% else %}
          P.
        {% endif %}
      </a>
      <nav class="prntd-header-nav">
        <a href="/collections/all">Shop</a>
        {% if cart.item_count > 0 %}
          <a href="/cart" class="prntd-cart-link">Bag ({{ cart.item_count }})</a>
        {% endif %}
      </nav>
    </div>
  </header>

  <!-- HERO -->
  <section class="lb-hero" data-animate="fade-up">
    <div class="lb-col-label">PREVIOUS COLLECTION — ARCHIVE</div>
    <h1>LOOKBOOK</h1>
    <div class="lb-sub">Elementics — Fall/Winter 2024</div>
  </section>

  <!-- BROKEN GRID GALLERY -->
  <section class="lb-grid">
    {%- assign counter = 0 -%}
    {%- assign span_patterns = '2c,2r|1,1|2c,1|1,2r|1,1|2c,2r|1,1|1,1|2c,1|1,2r|1,1|2c,1|1,1|2c,2r|1,1|1,1|2c,1|1,2r' -%}
    {%- assign patterns = span_patterns | split: '|' -%}

    {%- for product in collections.all.products -%}
      {%- for image in product.images -%}
        {%- assign pattern_index = counter | modulo: patterns.size -%}
        {%- assign pattern = patterns[pattern_index] -%}
        {%- assign parts = pattern | split: ',' -%}
        {%- assign col_span = parts[0] -%}
        {%- assign row_span = parts[1] -%}

        {%- assign counter = counter | plus: 1 -%}
        {%- assign num = counter | prepend: '00' | slice: -2, 2 -%}

        <div class="lb-cell{% if col_span == '2c' %} span-2c{% endif %}{% if row_span == '2r' %} span-2r{% endif %}" data-animate="fade-up">
          <img src="{{ image | image_url: width: 1200 }}"
               alt="{{ product.title }} — {{ image.alt | default: 'Look' }} "
               loading="lazy"
               width="{{ image.width }}"
               height="{{ image.height }}">
          <span class="lb-counter">{{ num }}</span>
          <span class="lb-vlabel">ELEMENTICS F/W 2024 — {{ num }}/{{ collections.all.products.size | times: 3 | prepend: '00' | slice: -2, 2 }}</span>
          <span class="lb-pname">{{ product.title }}</span>
        </div>
      {%- endfor -%}
    {%- endfor -%}
  </section>

  <!-- SEASON TWO TEASER -->
  <section class="lb-teaser" data-animate="fade-up">
    <div class="lb-teaser__bg">
      <img src="{{ 'season-two-promo-03.png' | asset_url }}" alt="PRNTD Season Two" loading="lazy">
    </div>
    <div class="lb-teaser__overlay"></div>
    <div class="lb-teaser__content">
      <div class="lb-teaser-tag">Coming March 11, 2026</div>
      <h2>Season<br>Two</h2>
      <div class="lb-teaser-sub">Nothing is forgotten.</div>
      <a href="/collections/all" class="lb-teaser-cta">Get Notified</a>
    </div>
  </section>

  <footer class="prntd-footer-full" style="border-top: 2.5px solid #000;">
    <div class="prntd-footer-full__inner">
      <div class="prntd-footer-full__col prntd-footer-full__brand">
        {% if settings.enter_screen_logo %}
          <img src="{{ settings.enter_screen_logo | image_url: width: 160 }}" alt="PRNTD" class="prntd-footer-logo-img" style="height: 40px; width: auto;">
        {% else %}
          <span class="prntd-footer-full__logo prntd-brand-text">P.</span>
        {% endif %}
        <p class="prntd-footer-full__tagline">Heritage woven into the modern world.</p>
      </div>
      <div class="prntd-footer-full__col">
        <h4 class="prntd-footer-full__heading prntd-ui-text">Navigate</h4>
        <ul class="prntd-footer-full__list">
          <li><a href="/collections/all">Shop</a></li>
          <li><a href="/pages/about">About</a></li>
          <li><a href="/pages/lookbook">Lookbook</a></li>
          <li><a href="/pages/contact">Contact</a></li>
        </ul>
      </div>
      <div class="prntd-footer-full__col">
        <h4 class="prntd-footer-full__heading prntd-ui-text">Connect</h4>
        <ul class="prntd-footer-full__list">
          <li><a href="https://instagram.com/prntdbybdq" target="_blank" rel="noopener">Instagram</a></li>
          <li><a href="https://x.com/prntdbybdq" target="_blank" rel="noopener">X / Twitter</a></li>
          <li><a href="mailto:info@prntdbybdq.com">info@prntdbybdq.com</a></li>
        </ul>
      </div>
      <div class="prntd-footer-full__col prntd-footer-full__newsletter">
        <h4 class="prntd-footer-full__heading prntd-ui-text">Stay in the Loop</h4>
        <p class="prntd-footer-full__newsletter-text">New drops. Exclusive access. No noise.</p>
        <form class="prntd-footer-full__form" action="/contact#contact_form" method="post">
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input type="email" name="contact[email]" placeholder="Email address" required class="prntd-footer-full__input">
          <button type="submit" class="prntd-footer-full__submit prntd-ui-text">Subscribe</button>
        </form>
      </div>
    </div>
    <div class="prntd-footer-full__bottom">
      <span>© {{ 'now' | date: '%Y' }} PRNTD. All rights reserved.</span>
    </div>
  </footer>
</div>

<script src="{{ 'scroll-animations.js' | asset_url }}" defer></script>
