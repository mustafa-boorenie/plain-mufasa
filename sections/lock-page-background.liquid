  "tag": "div",
  "class": "background-image shop",
  "settings": [
     {
      "type": "header",
      "content": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "desktop_bg_image",
      "label": "Desktop"
    },
    {
      "type": "checkbox",
      "id": "show_background_image",
