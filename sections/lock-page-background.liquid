      "default": true
    },
    {
      "type": "image_picker",
      "id": "mobile_bg_image",
      "label": "Mobile"
    },
       {
      "type": "checkbox",
      "id": "show_background_image_mobile",
      "label": "Show On Mobile",
      "default": true
