{%- assign bodyClasses = '' -%}
{%- section 'announcement-bar' -%}

{%- section 'default-page-background' -%}
<div style="width: 100%; margin: 0; height: max-content;" class="site-container">
  <div class="logo-container">
    <a href="{{ routes.root_url }}" class="logo-link w-inline-block">
      {% if settings.shop_screen_logo %}
        <img
          src="{{ settings.shop_screen_logo | image_url }}"
          style="width: {{ settings.shop_screen_logo_size }}px"
          loading="lazy"
          alt=""
          class="logo"
        >
      {% else %}
        <img src="{{ 'Supreme-dummy.png' | asset_url }}" loading="lazy" alt="" class="logo">
      {% endif %}
    </a>
    {%- section 'default-timezone' -%}
  </div>
  <div class="content-container" style="min-height: 100vh">
    <div class="rich-text-block" data-page-item="content">{{ content_for_layout }}</div>
    {%- section 'music-player' -%}
    {%- section 'default-home-btn' -%}
    <div style="height: 100px"></div>
    {% if settings.show_footer %}
      {%- section 'other-footer' -%}
    {% endif %}
  </div>
</div>
